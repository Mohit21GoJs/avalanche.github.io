{
  "swagger": "2.0",
  "info": {
    "description": "This is the documentation for avalanche api",
    "version": "1.0.0",
    "title": "Avalanche API",
    "contact": {
      "email": "ijan@useavalanche.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "salty-reef-38656.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Invite",
      "description": "Endpoints for invite feature"
    },
    {
      "name": "Share",
      "description": "Endpoints for share feature"
    },
    {
      "name": "Events",
      "description": "Business Events"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/share": {
      "post": {
        "tags": [
          "Share"
        ],
        "summary": "Generate Link for share feature",
        "description": "This endpoint is used for sharing link",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for invting by share",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Commoninvite"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/invite_your_friend": {
      "post": {
        "tags": [
          "Invite"
        ],
        "summary": "Invite users by email",
        "description": "This endpoint is used for inviting users by email",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for email invite",
            "required": true,
            "schema": {
              "$ref": "#/definitions/InviteByMail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/events/sign_up_by_email": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Sign up for user by email event",
        "description": "This endpoint is used to trigger sign up by email event",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for email invite",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SignupEvent"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/events/premium_event": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Trigger premium event",
        "description": "This endpoint is used to trigger premium event, the event can be any action that a user has to complete to become a premium member of the app",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for premium event",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PremiumEvent"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/PremimuResponse"
            }
          }
        }
      }
    },
    "/events/give_reward": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Trigger Give reward event",
        "description": "his endpoint is used to trigger give reward event, the event can be any action that a user has to complete to get the reward on the app",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for give reward",
            "required": true,
            "schema": {
              "$ref": "#/definitions/GiveRewardEvent"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/GiveRewardResponse"
            }
          }
        }
      }
    },
    "/users_with_premium": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Get all premium users",
        "description": "This endpoint is used to fetch all premium users on the app",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string",
            "description": "The email of logged in user"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "token": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "CommonEvent": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "email ofuser"
        }
      }
    },
    "SignupEvent": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        },
        {
          "type": "object",
          "properties": {
            "referral_code": {
              "type": "string",
              "description": "email ofuser"
            }
          }
        }
      ]
    },
    "PremiumEvent": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        }
      ]
    },
    "GiveRewardEvent": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        }
      ]
    },
    "UsersWithPremium": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        }
      ]
    },
    "PremimuResponse": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        },
        {
          "type": "object",
          "properties": {
            "overall_status": {
              "type": "string",
              "example": "sucesfully upgraded to premium"
            }
          }
        }
      ]
    },
    "GiveRewardResponse": {
      "allOf": [
        {
          "$ref": "#/definitions/CommonEvent"
        },
        {
          "type": "object",
          "properties": {
            "overall_status": {
              "type": "string",
              "example": "sucesfully upgraded to premium"
            },
            "referrers_email": {
              "type": "string",
              "description": "email of the referrer"
            }
          }
        }
      ]
    },
    "Commoninvite": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of logged in user/sender"
        },
        "referrer": {
          "type": "string",
          "description": "Email of logged in user/sender"
        },
        "base_url": {
          "type": "string",
          "description": "Base url for landing page for the email invite"
        }
      }
    },
    "InviteByMail": {
      "allOf": [
        {
          "$ref": "#/definitions/Commoninvite"
        },
        {
          "type": "object",
          "properties": {
            "emails": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of emails ['abc@gmail.com', 'user1@gmail.com']"
            }
          }
        }
      ]
    }
  }
}
