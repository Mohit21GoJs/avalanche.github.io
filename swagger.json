{
  "swagger": "2.0",
  "info": {
    "description": "This is the documentation for avalanche api",
    "version": "1.0.0",
    "title": "Avalanche API",
    "contact": {
      "email": "ijan@useavalanche.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "salty-reef-38656.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Invite",
      "description": "Endpoints for invite feature"
    },
    {
      "name": "Share",
      "description": "Endpoints for share feature"
    },
    {
      "name": "Events",
      "description": "Business Events"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/share": {
      "post": {
        "tags": [
          "Share"
        ],
        "summary": "Generate Link for share feature",
        "description": "This endpoint is used for sharing link",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for invting by share",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Commoninvite"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/invite_your_friend": {
      "post": {
        "tags": [
          "Invite"
        ],
        "summary": "Invite users by email",
        "description": "This endpoint is used for inviting users by email",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Body for email invite",
            "required": true,
            "schema": {
              "$ref": "#/definitions/InviteByMail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "token": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "Commoninvite": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of logged in user/sender"
        },
        "referrer": {
          "type": "string",
          "description": "Email of logged in user/sender"
        },
        "base_url": {
          "type": "string",
          "description": "Base url for landing page for the email invite"
        }
      }
    },
    "InviteByMail": {
      "allOf": [
        {
          "$ref": "#/definitions/Commoninvite"
        },
        {
          "type": "object",
          "properties": {
            "emails": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of emails ['abc@gmail.com', 'user1@gmail.com']"
            }
          }
        }
      ]
    }
  }
}
